/* 上方文本设置 */
.prompt-box {
  position: relative;
  top: -20px;
  width: 220px; /* 提示框的宽度 */
  height: 40px; /* 提示框的高度 */
  border-radius: 15px;
  background-color: #FFFFFF44; /* 设置背景颜色为白色 */
  border: 1px solid #CCCCCC44; /* 设置边框颜色 */
  display: flex; /* 使用Flexbox布局 */
  justify-content: center; /* 水平居中文本 */
  align-items: center; /* 垂直居中文本 */
  margin: 50px; /* 外边距，根据实际需要调整 */
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* 添加轻微的阴影效果 */
  z-index: 10;
  font-weight: bolder;
}
.prompt-text {
  font-size: 18px; /* 文本大小 */
  color: #333333; /* 文本颜色 */
}

/* 循环显示图片样式设计 */
.swiper-container {
  width: 95%;
  height: 160px; /* 根据需要调整高度 */
  position: relative;
  top: 45px;

}

.swiper-item {
  position: absolute;
  height: 80%;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 20px; /* 所有角的圆角为10px */
  /* box-shadow: 0px 3px 2px rgba(0, 0, 0, 0.3); */
}

.swiper-image {
  height: 60%;
  width: 100%; /* 图片宽度占满swiper-item */
  display: block; /* 去除图片底部的空隙 */
}