<view class="container">
  <!-- Top Navigation Bar (already provided by default in WeChat Mini Program) -->

  <!-- Middle Section -->
  <view class="middle-section">
    <!-- First block with #0C676B color for image placement -->
    <view class="image-block">
      <!-- Add your image here -->
      <image src="/images/training/pic_1.png" class="image" mode="aspectFill" bindtap="navigateToInfo"></image>
    </view>

    <!-- Four interactive buttons below the image block -->
    <view class="buttons-container">
      <button class="button" bindtap="navigateToGuide">快速指南</button>
      <button class="button" bindtap="navigateToStretch">运前拉伸</button>
      <button class="button" bindtap="navigateToAed">AED教程</button>
      <button class="button" bindtap="navigateToQuiz">知识答题</button>
    </view>
  </view>

  <!-- Bottom Section -->
  <view class="bottom-section">
    <button class="bottom-button" bindtap="navigateToSportHurt">哪里受伤了-></button>
    <text class="dynamic-text">SPORTS INJURY</text>
  </view>

  <!-- Bottom Navigation Bar (already provided by default in WeChat Mini Program) -->
</view>
