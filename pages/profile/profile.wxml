<!-- profile.wxml -->
<view class="profile">
  <view class="content">
    <!-- 如果用户未登录 -->
    <block wx:if="{{!isLogged}}">
      <view class="container">
  <!-- 登录/注册模块 -->
  <view class="login-section">
    <view class="login-gradient">
      <text class="login-title1">邀请你</text>
      <text class="login-subtitle1">登录获取更多优质内容</text>
      <button class="login-button1" bindtap="navigateToLogin">登录/注册</button>
    </view>
  </view>

  <!-- 个人中心模块 -->
  <view class="section">
    <text class="section-title">个人中心</text>
    <view class="grid-container">
      <view class="grid-item" bindtap="navigateRedirect">
        <image src="/images/profile/personal_info.png" class="icon"></image>
        <text class="grid-text">个人信息</text>
      </view>
      <view class="grid-item" bindtap="navigateRedirect">
        <image src="/images/profile/emergency_contact.png" class="icon"></image>
        <text class="grid-text">紧急联系人</text>
      </view>
      <view class="grid-item" bindtap="navigateRedirect">
        <image src="/images/profile/honor_info.png" class="icon"></image>
        <text class="grid-text">荣誉信息</text>
      </view>
      <view class="grid-item" bindtap="navigateRedirect">
        <image src="/images/profile/volunteer_cabin.png" class="icon"></image>
        <text class="grid-text">志愿者小屋</text>
      </view>
    </view>
  </view>

  <!-- 服务中心模块 -->
  <view class="section">
    <text class="section-title_1">服务中心</text>
    <view class="grid-container_1">
      <view class="grid-item" bindtap="navigateToFeedback">
        <image src="/images/profile/feedback.png" class="icon"></image>
        <text class="grid-text">意见反馈</text>
      </view>
      <view class="grid-item" bindtap="navigateToRedCross">
        <image src="/images/profile/red_cross.png" class="icon"></image>
        <text class="grid-text">红十字</text>
      </view>
      <view class="grid-item" bindtap="navigateToAboutUs">
        <image src="/images/profile/about_us.png" class="icon"></image>
        <text class="grid-text">关于我们</text>
      </view>
    </view>
  </view>
</view>
</block>
    <!-- 如果用户已登录 -->
    <block wx:if="{{isLogged}}">
      <view class="container">
  <!-- 登录/注册模块 -->
  <view class="login-section">
    <view class="login-gradient">
      <image class="avatar" src="{{avatarSwitch}}"></image>
       <text class="login-title">欢迎！</text>
       <text class="login-subtitle">{{username}}</text>
      <button class="login-button" bindtap="ExitLogin">退出登录</button>
    </view>
  </view>

  <!-- 个人中心模块 -->
  <view class="section">
    <text class="section-title">个人中心</text>
    <view class="grid-container">
      <view class="grid-item" bindtap="navigateToPersonalInfo">
        <image src="/images/profile/personal_info.png" class="icon"></image>
        <text class="grid-text">个人信息</text>
      </view>
      <view class="grid-item" bindtap="navigateToEmergencyContact">
        <image src="/images/profile/emergency_contact.png" class="icon"></image>
        <text class="grid-text">紧急联系人</text>
      </view>
      <view class="grid-item" bindtap="navigateToHonorInfo">
        <image src="/images/profile/honor_info.png" class="icon"></image>
        <text class="grid-text">荣誉信息</text>
      </view>
      <view class="grid-item" bindtap="navigateToVolunteerCabin">
        <image src="/images/profile/volunteer_cabin.png" class="icon"></image>
        <text class="grid-text">志愿者小屋</text>
      </view>
    </view>
  </view>

  <!-- 服务中心模块 -->
  <view class="section">
    <text class="section-title_1">服务中心</text>
    <view class="grid-container_1">
      <view class="grid-item" bindtap="navigateToFeedback">
        <image src="/images/profile/feedback.png" class="icon"></image>
        <text class="grid-text">意见反馈</text>
      </view>
      <view class="grid-item" bindtap="navigateToRedCross">
        <image src="/images/profile/red_cross.png" class="icon"></image>
        <text class="grid-text">红十字</text>
      </view>
      <view class="grid-item" bindtap="navigateToAboutUs">
        <image src="/images/profile/about_us.png" class="icon"></image>
        <text class="grid-text">关于我们</text>
      </view>
    </view>
  </view>
</view>
    </block>
  </view>
</view>

