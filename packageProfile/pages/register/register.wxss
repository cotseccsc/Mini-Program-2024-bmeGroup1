/* pages/index/index.wxss */
.container {
  width: 95%; /* 设置宽度为父容器的80% */
  height: 1130rpx; /* 设置固定高度为400rpx */
  padding: 20rpx; /* 内边距 */
  padding-top: 300rpx; /* 增加顶部的填充高度 */
  background: linear-gradient(45deg, #94d3ec, #eaf1ff); /* 背景颜色 */
}
.input-wrap {
	width: 50%;
	display: flex;
	flex-direction: row;
	margin-top: 50rpx;
	justify-content: space-between;
}

.info-input {
	border: 2rpx solid #000000;
	width: 200rpx;
}

.action {
	margin-top: 60rpx;
	background-color: #28a4e2;
	color: white;
}

.register {
