/* pages/person/person.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
}

.avatar-section {
  margin-bottom: 20px;
}

.avatar {
  width: 100px;
  height: 100px;
  border-radius: 50%;
  border: 1px solid #ccc;
}

.section {
  width: 100%;
  margin-bottom: 15px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.radio-group {
  display: flex;
  justify-content: space-around;
  width: 50%;
}

.radio-label {
  display: flex;
  align-items: center;
}

input {
  width: 60%;
  padding: 5px;
  border: 1px solid #ccc;
  border-radius: 5px;
}

.save-button {
  width: 100px;
  padding: 10px;
  background-color: #1aad19;
  color: white;
  border: none;
  border-radius: 5px;
  font-size: 16px;
  text-align: center;
  margin-top: 20px;
}
.custom-text {
  font-size: 24px; /* 字体大小 */
  font-weight: bold; /* 字体加粗 */
}
