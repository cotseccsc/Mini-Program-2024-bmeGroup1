/* 容器样式 */
/* 容器样式 */
.container {
  display: flex;
  flex-direction: column;
  padding: 20px;
}


/* 我的勋章样式 */
.medals-section {
  display: flex;
  flex-direction: column;
}

.section-title {
  font-size: 24px;
  font-weight: bold;
  margin-bottom: 10px;
}

.medals-summary {
  font-size: 16px;
  color: #666;
  margin-bottom: 20px;
}

.medals-title {
  font-size: 20px;
  margin-bottom: 10px;
}

.medals-list {
  display: flex;
  flex-wrap: wrap;
}

.medal-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 10px;
}

.medal-image {
  width: 80px;
  height: 80px;
  margin-bottom: 5px;
}
