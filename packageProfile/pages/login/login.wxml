<view class="background">
<image src="/packageProfile/images/login.png" style="width: 100%;height: 95%;" mode="widthFix"/>
</view>

<view class="container">
<view class="container_1">
	<view class="input-wrap">
		<view class="username">用户名：</view>
		<input value="{{username}}" bindinput="inputUsername" class="info-input" />
	</view>
	<view class="input-wrap">
		<view class="username">密码：</view>
		<input value="{{password}}" bindinput="inputPassword" class="info-input" password="true" />
	</view>
	<!-- 按钮 -->

</view>
<button bindtap="login" class="action">保存并登录</button>
<button bindtap="toRegister" class="register">注册账号</button>
</view>

